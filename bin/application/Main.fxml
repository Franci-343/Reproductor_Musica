<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
    <left>
        <VBox prefWidth="400.0" spacing="6.0" style="-fx-padding: 10;" xmlns="http://javafx.com/javafx/25">
            <children>
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Canciones" />
                <TableView fx:id="musicTable" prefHeight="500.0" prefWidth="450.0">
                    <columns>
                        <TableColumn fx:id="colName" prefWidth="200.0" text="Nombre" />
                        <TableColumn fx:id="colPath" prefWidth="130.0" text="Ruta" />
                        <TableColumn fx:id="colSize" prefWidth="120.0" text="Tamaño (bytes)" />
                    </columns>
                    <placeholder>
                        <Label text="No se encontraron canciones." />
                    </placeholder>
                </TableView>
            </children>
        </VBox>
    </left>
    <center>
        <VBox alignment="CENTER" spacing="20.0" style="-fx-padding: 20;">
            <children>
                <ImageView fitHeight="163.0" fitWidth="260.0" preserveRatio="true">
                    <image>
                        <Image url="@/resources/Wave.png" />
                    </image>
                </ImageView>
                <Label fx:id="lblCurrentSong" style="-fx-font-size: 16px; -fx-font-weight: bold;" text="Selecciona una canción" />
                <HBox alignment="CENTER" spacing="10.0">
                    <children>
                        <Button fx:id="btnPrevious" disable="true" text="⏮ Anterior" />
                        <Button fx:id="btnPlay" disable="true" text="▶ Play" />
                        <Button fx:id="btnPause" disable="true" text="⏸ Pause" />
                        <Button fx:id="btnStop" disable="true" text="⏹ Stop" />
                        <Button fx:id="btnNext" disable="true" text="⏭ Siguiente" />
                    </children>
                </HBox>
                <ProgressBar fx:id="progressBar" prefWidth="300.0" progress="0" />
                <Label fx:id="lblTime" text="00:00 / 00:00" />
            </children>
        </VBox>
    </center>
</BorderPane>
